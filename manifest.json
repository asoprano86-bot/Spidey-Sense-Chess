{
  "manifest_version": 3,
  "name": "Chess.com Opponent Risk Score (Tweaked)",
  "version": "0.2.5",
  "description": "Estimates opponent risk score on Chess.com using account age, win rates, and high-accuracy games.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://api.chess.com/*"
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["logo.svg"],
      "matches": ["https://www.chess.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/game/*",
        "https://www.chess.com/play/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
