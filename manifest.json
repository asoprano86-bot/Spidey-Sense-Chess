{
  "manifest_version": 3,
  "name": "Spidey Sense Chess",
  "version": "1.0.7",
  "description": "üï∑Ô∏è Your Spidey Sense for detecting suspicious opponents on Chess.com",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://api.chess.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Spidey Sense Chess",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png", 
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "icons/*.svg"],
      "matches": ["https://www.chess.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/game/live/*",
        "https://www.chess.com/game/*",
        "https://www.chess.com/play/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
